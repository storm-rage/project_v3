.lgoin-container
    width 100%
    height 100%
    display flex
    background url(@/assets/login-bg.png) no-repeat
    background-size 100% 100%
    position relative
    .login-box
        position absolute
        top 20%
        left 50%
        transform translateX(-50%)
        .box-item
            width 420px
            margin-top 20px
            display flex
            .el-select,.el-input,.el-button
                width 100%
                flex 1
            .captcha-img
                height 40px
                margin-left 20px
        .box-item:last-child
            margin-top 40px
    .login-tips
        font-size 12px
        color #999
        position absolute
        bottom 10%
        width 100%
        text-align center